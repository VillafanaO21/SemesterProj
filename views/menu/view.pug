extends ../layout

block content
    div.container.blog
        div.content
            div.menu-header-row
                h1.menu-title=menu.title
                a.button(href=`/menu/${menu.id}/edit`) Edit
            p.published-on Published
                strong.emphasize #{menu.chef_id.first_name}
            img.blog-image(src=menu.image_url)
            p.article-body=menu.body